<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvvm.MView">

    <Button
        android:id="@+id/mview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:text="view binding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="data binding"
        app:layout_constraintStart_toStartOf="@+id/mview1"
        app:layout_constraintTop_toBottomOf="@+id/mview1" />

    <Button
        android:id="@+id/mview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="2dp"
        android:text="view model"
        app:layout_constraintEnd_toEndOf="@+id/mview2"
        app:layout_constraintTop_toBottomOf="@+id/mview2" />

    <Button
        android:id="@+id/mview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:text="note app"
        app:layout_constraintEnd_toEndOf="@+id/mview3"
        app:layout_constraintTop_toBottomOf="@+id/mview3" />
</androidx.constraintlayout.widget.ConstraintLayout>